<view class="person"> 
  <view class='picAndName'>
    <open-data  class='pic' type="userAvatarUrl"></open-data>
    <open-data class='name' type="userNickName"></open-data>
  </view>
</view>

<view class="state">
  <view class='stateDetail'>
    <view class="myAnswerBlock" bindtap='goMyAnsw'>
      <image class="myAnswerIcon" src="{{myAnswerIcon}}" mode='widthFix'></image>
      <text class="myAnswerText">我的回答</text>
    </view>
    <view class="questionManageBlock" bindtap='goQuestionManage'>
      <image class="questionManageIcon" src="{{questionManageIcon}}" mode='widthFix'></image>
      <text class="questionManageText">问题管理</text>
    </view>
    <view class="hasBeenPublishedBlock" bindtap='goPosted'>
      <image class="hasBeenPublishedIcon" src="{{HasBeenPublishedIcon}}" mode='widthFix'></image>
      <text class="hasBeenPublishedText">问卷管理</text>
    </view>
  </view>
</view>


<view class="options">
  <navigator url="../myWallet/myWallet" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="{{MyPurseIcon}}" style="margin-right: 10px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">我的钱包</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
  <navigator url="../aboutUs/aboutUs" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="{{MyCollectionIcon}}" style="margin-right: 10px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">关于我们</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
  <navigator url="../customerService/customerService" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="{{CallCenterIcon}}" style="margin-right: 10px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">客服中心</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
  <navigator url="../myInfo/myInfo" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="{{PersonalSettingIcon}}" style="margin-right: 10px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">个人信息</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
</view>