page{
  height:100%;
}

.note {
  margin-top: 20rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}
#wholePage{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.support{
  display: flex;
  height: 50rpx;
}
.supportPic{
  width: 40rpx;
  margin-left: 200rpx;
  margin-right: 10rpx;
}

.numOfSupport{
  color: #999;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.weui-btn{
  width: 50%;
  margin-bottom: 20rpx;
  background-color: #5CACEE;
  color: white;
}
.itemLine{
 background: #F6F6F6;
 width: 100%;
 height: 1rpx;
}

.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 3rpx;
}

#comment{
  height: 15%;
}

#commentContent{
  height: 50%
}

#review{
  padding: 20rpx;
  margin: 20rpx;
  /* color:#D4D4D4; */
  border-radius: 20rpx;
  border: 1rpx solid #E3E3E3;
}

.reply_time {
  color: #999;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.weui-media-box__title{
  display: block;
  white-space :pre-line;
}

.weui-media-box__desc{
  display: block;
  word-wrap:break-word;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:pre-line;
  word-break:break-all;
}
.clear{
  margin-bottom: 5%;
}