page{
  height: 100%
}

.note {
  margin-top: 20rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
}
.options {
  width: 94%;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #E3E3E3;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.info{
  height: 50%;
}
.blank{
 height: 20rpx;
}
.infoName {
  float: left;
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;  
}

.infoValue {
  float: right;
  color: gray;
  padding-right: 20rpx;
}

.weui-btn{
  width: 50%;
}
.divLine{
  margin-top: 0rpx;
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}
.moneyBlock {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.moneyIcon {
  width: 60rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}
.moneyInfo {
  margin-top: 20rpx;
  text-align: center;
  font-size: 40rpx;
}

.moneyNum {
  color: #5CACEE;
  font-size: 60rpx;
  text-align: center;
}

#bottomButton{
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.nextButton{
  width: 35%;
  background-color: #5CACEE;
  color: white;
}
.weui-input {
  padding-left: 10rpx;
}