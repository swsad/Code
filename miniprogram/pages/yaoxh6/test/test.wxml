<view class="questionnaire" wx:for="{{array}}" wx:key="id">
  <view class='questionnaireOne' bindtap='getName' bindlongpress='deleteSelf' data-id="{{index}}" >
    <view class="questionnaireTitle">{{item.name}}</view>
    <view class="questionnaireDetail">
      <view class="dateBlock">
        <image class="dateIconClass" src="{{DateIcon}}" mode='widthFix'></image>
        <view class="dateClass">{{item.time}} </view>
      </view>
      <view class="addressBlock">
        <image class="addressIconClass" src="{{AddressIcon}}" mode='widthFix'></image>
        <view class="addressClass">{{item.destination}} </view>
      </view>
      <view class="priceBlock">
        <image class="priceIconClass" src="{{PriceIcon}}" mode='widthFix'></image>
        <view class="priceClass">{{item.price}} </view>
      </view>
    </view>
  </view>
</view>

<button class="weui-btn" type="primary" bindtap='addQuestionnaire'>确认发布</button>