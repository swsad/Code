/**app.wxss**/
@import "weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.options {
  width: 95%;
  border-radius: 20rpx;
  background-color: #fff;
  border: 1rpx solid #E3E3E3;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.weui-cell{
  height: 80rpx;
}
.weui-cell:before{
  left:30rpx;
  right:30rpx;
}
.itemLine{
 background: #F6F6F6;
 width: 100%;
 height: 1rpx;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 3rpx;
 margin-top: 20rpx;
}
.infoItem {
  width: 95%;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #F6F6F6;
  margin:20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #E3E3E3;
}
.infoName {
  float: left;
  padding-left: 30rpx;
}

.infoValue {
  float: right;
  padding-right: 30rpx;
}

